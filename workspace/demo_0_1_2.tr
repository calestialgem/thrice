#! This is a demo file, showcasing all the features of Thrice that are added in
#! the 0.1.2 version of Rainfall compiler.

# Type Qualifiers
# ===============

# `const` modifier
const double CONSTANT = 2.72

# `mut` modifier
mut int number = 0

# Assignment Statement
number = 17

# Compound Assignment
number *= 1
number /= 1
number %= 1
number += 1
number -= 1

# Increment & Decrement Statements
number++
number--
